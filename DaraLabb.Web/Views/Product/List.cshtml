@model ProductsListViewModel

@{
    ViewData["Title"] = "List";
}

<link rel="stylesheet" href="~/css/ProductsCardDeck.css" />

<div class="container">
    <div class="card-deck">
        @foreach (var item in Model.products)
        {
            <div class="card" style="text-align: center">
                <img class="card-img-top" src="@item.ImgUrl" alt="@item.Name" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="mt-auto">
                        <p>@item.Price.ToString("C")</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @*@Html.ActionLink("Add to cart", "AddToCart", "Product", new { id = item.Id }, new { @class = "btn btn-outline-primary" })*@
                            <button class="btn btn-outline-primary" onclick="AddToCart('@item.Id')">Add to cart</button>
                        }
                        else
                        {
                            <a href="~/Identity/Account/Login" class="btn btn-outline-primary">Login</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>