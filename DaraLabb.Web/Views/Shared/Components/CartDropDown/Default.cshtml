@model CartViewModel

    <li class="dropdown">
        <a
           class="dropdown-toggle nav-link text-dark" data-toggle="dropdown">
        <img src="~/Images/IconCart.png" style="height:auto; max-width:25px"/></a>
        <ul class="dropdown-menu">
            @foreach (var item in Model.Products)
            {
                <li>
                    <img src="@item.Product.ImgUrl" style="height:auto; max-width:50px" />@item.Product.Name
                </li>
            }
            <li class="divider"></li>
        </ul>
    </li>